function getCategory(title){
	var tot=eventsCatArray.length;
	for (var i=0;i<tot;i++){
		var event = eventsCatArray[i];
		var test = new RegExp(event, "gi");
		if (title.match(test))
			return i;
	}
}

function compareEvents(eventA, eventB){
	var a=eventA.title;
	var b=eventB.title;
	
	var aCat=getCategory(a);
	var bCat=getCategory(b);
	
	return aCat-bCat;
	
}



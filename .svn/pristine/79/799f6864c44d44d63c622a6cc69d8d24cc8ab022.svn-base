									+ toStringDDMMYYYY(end.toJSON().slice(0, 10)))
							.fadeIn('fast');
					$.ajax({
						type : "get",
						url : "ajaxgauges/" + start.toJSON().slice(0, 10) + "/"
								+ end.toJSON().slice(0, 10),
						success : function(msg) {
							var map = JSON.parse(msg);
							refreshGauges(map);
						}
					}), $.ajax({
						type : "get",
						url : "linegraph/" + start.toJSON().slice(0, 10) + "/"
								+ end.toJSON().slice(0, 10),
						success : function(msg) {
							var map = JSON.parse(msg);
